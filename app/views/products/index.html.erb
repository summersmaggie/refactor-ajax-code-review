<h3>Products</h3>
<p><strong>Click on any item to learn more!</strong></p>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= link_to product.name, product_path(product), id: "#{product.id}", remote: true %></h4>
      <div id="product_description_<%= product.id %>">
      </div>
      <div id="product_image_<%= product.id %>">
      </div>
      <% if current_user && current_user.admin %>
        <div id="edit_product_<%= product.id %>">
        </div>
      <% end %>
      <p><%= number_to_currency product.price %></p>

      <%= form_for @order_item do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, min: 1 %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
